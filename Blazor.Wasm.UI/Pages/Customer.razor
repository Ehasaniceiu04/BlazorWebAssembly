@page "/customers"
<div class="d-flex">
    <h4 class="flex-grow-1">Customers</h4>
    <button class="btn btn-primary">Create</button>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in customers){
            <DisplayCustomer OnDelete="@(customerId=>Reload(customerId))" customer="@item"></DisplayCustomer>
        } 
    </tbody>
</table>
