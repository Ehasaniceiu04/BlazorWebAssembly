
@page "/login"


<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="card-body p-md-5 mx-md-4">
            <form>
                <div class="mb-3">
                    <label for="formUserNameInput" class="form-label">User Name</label>
                    <input type="text" class="form-control" id="formUserNameInput">
                </div>
                <div class="mb-3">
                    <label for="formPasswordInput" class="form-label">Password</label>
                    <input type="password" class="form-control" id="formPasswordInput">
                </div>
            </form>
            <div class="text-center pt-1 mb-3 pb-1">
                <a class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" href="/">Log in</a>
                <a class="text-muted" href="#!">Forgot password?</a>
            </div>
            <div class="d-flex align-items-center justify-content-center pb-4">
                <p class="mb-0 me-2">Don't have an account?</p>
                <a  class="btn btn-outline-danger" href="signup">Create new</a>
            </div>
        </div>
    </div>
</div>

